mixin roles(roles, selectedValue='user')
    //- div(class="input-group mb-3")
    div(class="mb-3")
        //- label(class="input-group-text" for="role") Roles
        label(class="form-label" for="role") Roles
        select(class="form-select" id="role" name="role")
            //- option(selected) User
            if roles.length
                each role in roles
                    option(value=role.id selected=(role.role===selectedValue
                    )) #{role.role}
